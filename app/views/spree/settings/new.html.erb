<% content_for :sidebar do %>
  <% if "products" == @current_controller && @taxon %>
    <%= render :partial => "spree/shared/filters" %>
  <% else %>
    <%= render :partial => "spree/shared/taxonomies" %>
  <% end %>
<% end %>

<%#= render :partial => 'spree/shared/error_messages', :locals => { :target => @setting } %>

<h1><%= t('.what_need') %></h1>
<%= form_tag settings_path, :method => :get do -%>
  <p>
    <%= label_tag :Ancho %>
    <%= select_tag :tire_width_id, options_for_select([[t(:width), '']] +
                              @widths.map {|t| [t.name, t.id]},
                            @width ? @width.id : params[:tire_width_id]) %>
  </p>
<% end -%>
