<% content_for :sidebar do %>
  <% if "products" == @current_controller && @taxon %>
    <%= render :partial => "spree/shared/filters" %>
  <% else %>
    <%= render :partial => "spree/shared/taxonomies" %>
  <% end %>
<% end %>

<%#= render :partial => 'spree/shared/error_messages', :locals => { :target => @setting } %>

<h1>Configuracion Aplicacion</h1>

<table class="">
  <tr>
    <% Spree::Setting::FLAGS_LIST_1.each do |item| -%>
      <td><%= image_tag(item, :size => "50x50") %></td>
    <% end -%>
    <td colspan=2><h6>Entrega 24 Horas</h6></td>
  </tr>
  <tr>
    <% Spree::Setting::FLAGS_LIST_2.each do |item| -%>
      <td><%= image_tag(item, :size => "50x50") %></td>
    <% end -%>
    <td colspan=2><h6>Entrega 48 Horas</h6></td>
  </tr>
  <tr>
    <% Spree::Setting::FLAGS_LIST_3.each do |item| -%>
      <td><%= image_tag(item, :size => "50x50") %></td>
    <% end -%>
    <td colspan=2><h6>Entrega 2-4 dias</h6></td>
  </tr>
  <tr>
    <% Spree::Setting::FLAGS_LIST_4.each do |item| -%>
      <td><%= image_tag(item, :size => "50x50") %></td>
    <% end -%>
    <td colspan=2><h6>Entrega 3-4 dias</h6></td>
  </tr>
</table>
<h1><%= t('.what_need') %></h1>
<%= form_for @valor, :url => settings_path do |f| %>
  <p>
    <%= f.label :Ancho %>
    <%= f.collection_select(:ancho, Spree::TireWidth.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
    <%= f.label :Perfil %>
    <%= f.collection_select(:perfil, Spree::TireProfile.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
    <%= f.label :Llanta %>
    <%= f.collection_select(:llanta, Spree::TireInnertube.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
  </p>
  <p>
    <%= f.label :IC %>
    <%= f.collection_select(:ic, Spree::TireIc.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
    <%= f.label :Velocidad %>
    <%= f.collection_select(:velocidad, Spree::TireSpeedCode.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
    <%= f.label :FR %>
    <%= f.collection_select(:fr, Spree::TireFr.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
    <%= f.label :TTTL %>
    <%= f.collection_select(:tttl, Spree::TireTttl.all, :id, :name, { :include_blank => true }, { 'style' => 'width:80px' }) %>
  </p>
  <p>
    <%= f.submit image_tag("Spain.png"), :alt => t('.submit'), :id => 'contact_us_contact_submit', :title => t('.submit') %>
  </p>
<% end %>

